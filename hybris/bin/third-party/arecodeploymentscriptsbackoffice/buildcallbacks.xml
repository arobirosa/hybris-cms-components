--><project name="arecodeploymentscriptsbackoffice_buildcallbacks">
	<property name="arecodeploymentscriptsbackofficeWebFragmentSrc" value="${ext.arecodeploymentscriptsbackoffice.path}/resources/web-fragment.xml"/>
	<property name="arecodeploymentscriptsbackofficeWebFragmentDestJar" value="${ext.backoffice.path}/web/webroot/WEB-INF/lib/webfragmentExt_arecodeploymentscriptsbackoffice.jar"/>

	

	

	<macrodef name="arecodeploymentscriptsbackoffice_after_clean">
		<sequential>
			<arecodeploymentscriptsbackoffice_remove_web_fragment/>
		</sequential>
	</macrodef>

	<macrodef name="arecodeploymentscriptsbackoffice_after_build">
		<sequential>
			<arecodeploymentscriptsbackoffice_remove_web_fragment/>
			<arecodeploymentscriptsbackoffice_create_web_fragment/>
		</sequential>
	</macrodef>

	<macrodef name="arecodeploymentscriptsbackoffice_remove_web_fragment">
		<sequential>
			<if>
				<available file="${arecodeploymentscriptsbackofficeWebFragmentDestJar}"/>
				<then>
					<delete file="${arecodeploymentscriptsbackofficeWebFragmentDestJar}"/>
				</then>
			</if>
		</sequential>
	</macrodef>

	<macrodef name="arecodeploymentscriptsbackoffice_create_web_fragment">
		<sequential>
			<if>
				<available file="${arecodeploymentscriptsbackofficeWebFragmentSrc}"/>
				<then>
					<sequential>
						<jar destfile="${arecodeploymentscriptsbackofficeWebFragmentDestJar}">
							<metainf file="${arecodeploymentscriptsbackofficeWebFragmentSrc}"/>
						</jar>
					</sequential>
				</then>
			</if>
		</sequential>
	</macrodef>

	<patternset id="arecodeploymentscriptsbackoffice.localization.pattern">
		<!-- core and hmc  -->
		<include name="**/*locales*_en.properties"/>
		<exclude name="**/hmc/web/webroot/WEB-INF/classes/**/*"/>
		<exclude name="**/unittest/**/*"/>

		<!-- cockpit (ng) -->
		<include name="**/i3-label_en.properties"/>
		<include name="**/labels_en.properties"/>

		<!-- messages -->
		<include name="**/*messages_en.properties"/>
		<include name="**/*messages.properties"/>

		<!-- frontend properties files in WEB-INF/messages folder -->
		<include name="**/WEB-INF/messages/*_en.properties"/>

		<!-- csv and impex -->
		<include name="**/*_en.csv"/>
		<include name="**/*_en.impex"/>

		<include name="**/lang-en.properties"/>

		<!-- email localizations from yacceleratorcore -->
		<include name="resources/**/messages/*_en.properties"/>

		<!-- include validation messages -->
		<include name="resources/**/ValidationMessages.properties"/>
	</patternset>

</project>
