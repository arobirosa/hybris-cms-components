<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">

	<itemtypes>

		<itemtype generate="true"
				  code="NewsletterSignUpCMSComponent"
				  jaloclass="org.areco.ecommerce.cms.newsletter.jalo.NewsletterSignUpCMSComponent"
				  extends="SimpleCMSComponent"
				  autocreate="true"
		>
			<attributes>
				<attribute qualifier="title" type="localized:java.lang.String">
					<persistence type="property"/>
				</attribute>

				<attribute qualifier="agreementText" type="localized:java.lang.String">
					<description>HTML Text to show to the customer to agree to the privacy policy.</description>
					<persistence type="property">
						<columntype>
							<value>HYBRIS.LONG_STRING</value>
						</columntype>
					</persistence>
				</attribute>

				<attribute qualifier="thankYouText" type="localized:java.lang.String">
					<description>HTML Text to show when the sign up was successful</description>
					<persistence type="property">
						<columntype>
							<value>HYBRIS.LONG_STRING</value>
						</columntype>
					</persistence>
				</attribute>
			</attributes>
		</itemtype>

	</itemtypes>
</items>
